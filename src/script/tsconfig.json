{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "./js", // Set the output directory to "js"
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
